<!DOCTYPE html>
<html lang="en">
<head>
 <%- include('includes/head') %>
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="/rezepte-gefiltert.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <script src="/karussel.js" defer></script>
</head>
<body>




        <div class="wrapper">
          
  <% if (names.length > 1) { %>
                <button class="slide-arrow" id="slide-arrow-left">&#8249</button>
        
                <button class="slide-arrow" id="slide-arrow-rigth"> &#8250</button>
        
          <% } %>  
       
            <ul class="slides-container">
                <%  names.forEach((rezept) => {   %>

        <li class="slide">
            <div class="img"><a href="/detailiertes-gericht/<%= rezept.id_Rezept %>"><img src="<%= rezept.Pfad_Bild %>"
                                  alt="" draggable="false"></a> </div>
            <a href="/detailiertes-gericht/<%= rezept.id_Rezept %>"><h1><%= rezept.Name %></h1></a> 
           
         
        </li>
        
    <%  }) %> 
    </ul>
  
</div>  
</body>
</html>